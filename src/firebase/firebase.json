{
    "hosting": {
      "public": "your_public_directory", 
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    "rules": {
      ".read": "auth != null",
      ".write": "auth != null"

    }
  }
  